<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="favorites.FavoritesFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_favorites_title_padding_horizontal"
        android:paddingTop="@dimen/fragment_favorites_title_padding_top"
        android:paddingBottom="@dimen/fragment_favorites_title_padding_bottom"
        android:text="@string/fragment_favorites_title"
        android:textSize="@dimen/fragment_favorites_title_size"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/fragment_favorites_count_vacancies_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_favorites_count_vacancies_text_view_text"
        android:textColor="@color/grey_3"
        android:textSize="@dimen/fragment_favorites_count_vacancies_text_view_size"
        android:padding="@dimen/fragment_favorites_count_vacancies_text_view_padding"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_favorites_vacancies_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        tools:listitem="@layout/vacancy_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingHorizontal="@dimen/fragment_favorites_vacancies_list_recycler_view_padding_horizontal"/>

</LinearLayout>