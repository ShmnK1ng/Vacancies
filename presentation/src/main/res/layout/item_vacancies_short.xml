<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_vacancies_short_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_search_recycler_view_text_view_text"
        android:textColor="@color/white"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textSize="@dimen/fragment_search_recycler_view_text_view_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_vacancies_short_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_vacancies_short_text_view" />

    <Button
        android:id="@+id/item_vacancies_short_more_vacancies_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/fragment_search_recycler_view_more_vacancies_button_margin_horizontal"
        android:layout_marginVertical="@dimen/fragment_search_recycler_view_more_vacancies_button_margin_vertical"
        android:background="@drawable/more_button_background"
        android:text="@string/fragment_search_recycler_view_more_vacancies_button_text"
        android:textSize="@dimen/fragment_search_recycler_view_more_vacancies_button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_vacancies_short_recycler_view" />
</androidx.constraintlayout.widget.ConstraintLayout>